extends layout

block content
  h1= title
  p Welcome to #{title}
  include includes/menu.pug
  div
    div(id="mensajes")
    div
      a(class="btn btn-primary",id="borrar",href="/api/list"+item._id) Volver
    form(class="needs-validation",method="get",action="",id="formu",novalidate)
        div(class="form-group")
            label(for="nombre") nombre
            input(class="form-control",id="nombre",name="nombre",type="text",value="",placeholder="Nombre de usuario",required)
